<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myshop">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyShop">
        <activity android:name=".activities.SellerEditProductActivity"
            android:theme="@style/Theme.MyShop.NoActionBar"
            />
        <activity android:name=".activities.ProductFilterBeauty" />
        <activity android:name=".activities.ProductFilterHome" />
        <activity android:name=".activities.ProductFilterBook" />
        <activity android:name=".activities.ProductFilterFashion" />
        <activity android:name=".activities.ProductFilterElectronic" />
        <activity android:name=".activities.ProductFilterCar" />
        <activity android:name=".admin.AdminActivity" />
        <activity
            android:name=".activities.CustomerProductFullView"
            android:theme="@style/Theme.MyShop.NoActionBar" />
        <activity android:name=".activities.SellerChangePassword" />
        <activity android:name=".activities.SellerEditMyAccActivity" />
        <activity android:name=".activities.CustomerHomePageActivity" />
        <activity android:name=".activities.SellerHomePageActivity" />
        <activity android:name=".splash.Splash"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SellerLoginActivity" />
        <activity android:name=".activities.CustomerLoginActivity" />
        <activity android:name=".activities.CustomerEditMyAccActivity" />
        <activity android:name=".activities.MainActivity"
            android:theme="@style/Theme.MyShop"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>