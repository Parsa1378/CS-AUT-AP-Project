<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_customer_home">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/elecCatButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:text="لوازم الکترونیکی"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        tools:layout_editor_absoluteX="16dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fashionCatButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:text="پوشاک"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintTop_toBottomOf="@+id/elecCatButton"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bookCatButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:text="کتاب"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintTop_toBottomOf="@+id/fashionCatButton"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/homeCatButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:text="لوازم خانه"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintTop_toBottomOf="@+id/bookCatButton"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/beautyCatButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:text="لوازم بهداشتی"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintTop_toBottomOf="@+id/homeCatButton"
        tools:layout_editor_absoluteX="0dp" />


    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:text="ابتدا ترتیب نمایش و سپس بر دسته مورد نظر کلیک کنید."
        android:textSize="15dp"
        android:textAlignment="center"
        android:background="@color/white"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:checkedButton="@+id/radio_button_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10">

        <RadioButton
            android:id="@+id/rb_cheapest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/trochut_bold"
            android:gravity="right"
            android:paddingStart="20dp"
            android:text="ارزان ترین " />

        <RadioButton
            android:id="@+id/rb_most_expensive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/trochut_bold"
            android:paddingStart="20dp"
            android:text="گران ترین" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="ترتیب نمایش کالاها"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />


</androidx.constraintlayout.widget.ConstraintLayout>