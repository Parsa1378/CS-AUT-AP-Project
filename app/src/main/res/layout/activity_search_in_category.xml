<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_seller_password_change"
    tools:context=".activities.SearchInCategoryActivity"
    android:orientation="vertical"
    >

    <EditText
        android:id="@+id/search_bar_in_category"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:drawableEnd="@drawable/ic_baseline_search_24"
        android:drawablePadding="10dp"
        android:background="@drawable/button_background2"
        android:hint="جست و جو کنید ..."
        android:fontFamily="@font/trochut_bold"
        android:inputType="textPersonName"
        android:paddingStart="10dp" />
    <TextView
        android:id="@+id/tv_category_name_inCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="همه ی کالاها"
        android:textAlignment="center"
        android:textSize="25sp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/inCategory_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        />

</LinearLayout>