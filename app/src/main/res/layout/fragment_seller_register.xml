<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SellerRegisterFragment"
    android:background="@color/primary"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ثبت نام فروشندگان"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            />
        <EditText
            android:id="@+id/seller_register_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/text_editor_background"
            android:drawableEnd="@drawable/ic_person"
            android:drawablePadding="6dp"
            android:inputType="textPersonName"
            android:hint="نام و نام خانوادگی *"
            android:padding="7dp"
            android:paddingEnd="20dp" />
        <EditText
            android:id="@+id/seller_register_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_editor_background"
            android:drawableEnd="@drawable/ic_email"
            android:drawablePadding="6dp"
            android:hint="ایمیل *"
            android:inputType="textEmailAddress"
            android:padding="7dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp" />

        <EditText
            android:id="@+id/seller_register_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_editor_background"
            android:drawableEnd="@drawable/ic_email"
            android:drawablePadding="6dp"
            android:hint="* شماره ‌تماس"
            android:gravity="end"
            android:inputType="phone"
            android:padding="7dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp" />

        <EditText
            android:id="@+id/seller_register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_editor_background"
            android:drawableEnd="@drawable/ic_security"
            android:drawablePadding="6dp"
            android:gravity="end"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="7dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp" />

        <EditText
            android:id="@+id/seller_register_password_repeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_editor_background"
            android:drawableEnd="@drawable/ic_security"
            android:drawablePadding="6dp"
            android:gravity="end"
            android:hint="@string/password_repeat"
            android:inputType="textPassword"
            android:padding="7dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp" />
        <TextView
            android:id="@+id/text_view_seller_register_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:textSize="12sp"
            android:fontFamily="sans-serif-thin"
            android:textColor="@color/error_red" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/seller_register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_background"
            android:text="ثبت نام"
            />
        <TextView
            android:id="@+id/seller_text_view_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="حساب کاربری دارید؟!"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            />
    </LinearLayout>


</RelativeLayout>